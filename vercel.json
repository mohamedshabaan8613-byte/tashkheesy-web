{
  "version": 2,
  "framework": "vite",
  "buildCommand": "cd client && npm run build",
  "installCommand": "npm install --legacy-peer-deps",
  "outputDirectory": "client/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
